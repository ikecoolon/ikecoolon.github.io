// 自定义字体变量
:root
  // 无衬线字体
  --font-family system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial, "Noto Sans", "Liberation Sans", sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji"
    
  // 衬线字体
  --font-family-serif Georgia, "Times New Roman", serif
    
  // 等宽字体
  --font-family-mono SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace
    
  // 中文字体
  --font-family-chinese "PingFang SC", "Microsoft YaHei", "Source Han Sans SC", "Noto Sans CJK SC", "WenQuanYi Micro Hei"

// 基础字体设置
body
  font-family var(--font-family), var(--font-family-chinese) !important
  font-size 16px
  font-weight 400
  line-height 1.75
  text-rendering optimizeLegibility
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

// 标题样式
h1, h2, h3, h4, h5, h6
  font-family var(--font-family), var(--font-family-chinese) !important
  font-weight 600
  line-height 1.5
  margin-top 2em
  margin-bottom 1em

// 标题大小
h1
  font-size 2em
h2
  font-size 1.6em
h3
  font-size 1.3em
h4
  font-size 1.15em
h5
  font-size 1.05em
h6
  font-size 1em

// 代码字体
code, kbd, pre, samp
  font-family var(--font-family-mono) !important
  font-size 0.9em

// 内容样式优化
.theme-hope-content
  font-size 16px
  
  p
    margin 1em 0
    line-height 2
  
  // 列表样式
  ul, ol
    padding-left 1.2em
    line-height 1.9
  
  // 引用样式
  blockquote
    border-left 4px solid var(--border-color)
    padding 0.5em 1em
    background-color var(--bg-color-secondary)

// 链接样式
a
  font-weight 500
  text-decoration none
  transition color 0.3s
  
  &:hover
    text-decoration underline

// 表格样式
table
  font-size 0.95em
  line-height 1.6

// 移动端适配
@media (max-width: 419px)
  body
    font-size 15px
  
  .theme-hope-content
    font-size 15px

// 布局优化
.theme-container
  .navbar
    .links
      max-width none
      padding 0 1.5rem

  .page-title
        margin: 1rem 1rem !important
        max-width: 100% !important

  .theme-default-content
        margin: 1rem 1rem !important
        max-width: 100% !important

  .breadcrumb
        margin: 4.1rem 0 -3.1rem 0 !important

  #anchor // 右侧导航样式优化
        left: calc(100vh + 12rem) !important
        
        // 右侧导航活动状态样式
        a.active, li.active > a
          color: var(--theme-color) !important
          font-weight: 600
          border-left: 2px solid var(--theme-color)
          padding-left: 0.75rem
          
        a:hover
          color: var(--theme-color) !important
          transition: color 0.3s ease

  .sidebar
    width 12rem // 减小左侧边栏宽度

  .page
    padding-left 12rem // 与sidebar宽度对应
    padding-right 0
    
    .theme-hope-content
      max-width none
      margin 0
      padding 2rem 1rem
      
    .page-nav // 上一页下一页导航
      max-width none
      margin 1rem
      padding 1rem
      
    .page-meta // 页面元信息
      max-width none
      margin 1rem
      padding 1rem

  
      
// 在没有侧边栏时的布局
.no-sidebar
  .page
    padding-left 0 !important
    
    .theme-hope-content
      max-width none
      margin 0
      padding 2rem 1rem

// 移动端适配
@media (max-width: 959px)
  .theme-container
    .page
      padding-left 0

    .sidebar-sub-headers
      display none // 在移动端隐藏右侧导航

// 保持其他样式不变
{content}

// 调整 StickyHtmlPreview 布局
.sticky-preview-wrapper
  display flex
  gap 1rem
  position relative
  margin 0 -1rem
  padding 0 1rem
  
  .content-slot
    flex 1
    min-width 0 // 防止内容溢出
    padding-right 1rem
  
  .sticky-preview
    width 320px // 设置固定宽度
    position sticky
    top 4rem
    height calc(100vh - 4rem)
    background var(--bg-color)
    border-radius 8px
    box-shadow var(--card-shadow)
    transition background-color 0.3s, box-shadow 0.3s 